<.header class="mt-10">
  Service
  <:actions>
    <.link patch={if @service.parent, do: ~p"/services/#{@service.parent}", else: ~p"/services"}>
      <.button>Back</.button>
    </.link>
  </:actions>
</.header>

<.table id="service-details" rows={[@service]}>
  <:col :let={service} label="Name">
    <%= service.name %>
  </:col>
  <:col :let={service} label="Parent">
    <%= if service.parent do %>
      <.link navigate={~p"/services/#{service.parent}"}><%= service.parent.name %></.link>
    <% else %>
      -
    <% end %>
  </:col>
  <:col :let={service} label="Children">
    <%= service.num_children %>
  </:col>
  <:col :let={service} label="Descendants">
    <%= service.num_descendants %>
  </:col>
  <:action :let={service}>
    <.link patch={~p"/services/#{service}/edit"}>Edit</.link>
  </:action>
  <:action :let={service}>
    <.link
      phx-click={JS.push("delete", value: %{id: service.id}) |> JS.navigate(~p"/services")}
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>

<.header class="mt-10">
  Child Services
  <:actions>
    <.link patch={~p"/services/new"}>
      <.button>New Child Service</.button>
    </.link>
  </:actions>
</.header>

<.table id="services" rows={@streams.services} row_click={fn {_id, service} -> JS.navigate(~p"/services/#{service}") end}>
  <:col :let={{_id, service}} label="Name">
    <%= service.name %>
  </:col>
  <:col :let={{_id, service}} label="Children">
    <%= service.num_children %>
  </:col>
  <:col :let={{_id, service}} label="Descendants">
    <%= service.num_descendants %>
  </:col>
  <:action :let={{_id, service}}>
    <div class="sr-only">
      <.link navigate={~p"/services/#{service}"}>Show</.link>
    </div>
    <.link patch={~p"/services/#{service}/edit"}>Edit</.link>
  </:action>
  <:action :let={{id, service}}>
    <.link phx-click={JS.push("delete", value: %{id: service.id}) |> hide("##{id}")} data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>

<.modal :if={@live_action in [:new, :edit]} id="service-modal" show on_cancel={JS.patch(~p"/services/#{@service}")}>
  <.live_component
    module={VeraWeb.ServiceLive.FormComponent}
    id={@service.id || :new}
    title={@page_title}
    action={@live_action}
    service={@service}
    parent_id={@service.id}
    patch={~p"/services/#{@service}"}
  />
</.modal>